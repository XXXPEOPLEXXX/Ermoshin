<Page x:Class="NaityKinoErmoshin.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NaityKinoErmoshin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Авторизация" FontSize="20"/>
            <TextBlock Text="Логин" FontSize="20"/>
            <TextBox x:Name="TBLogin" Text="{Binding Login}"/>
            <TextBlock Text="Пароль" FontSize="20"/>
            <TextBox  x:Name="TBPassword" Text="{Binding Password}"/>
            <Button x:Name="BtnSave" Content="Сохранить" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Page>
